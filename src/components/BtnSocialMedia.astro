<style>
        @import url('https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Noto+Serif:ital,wght@0,100..900;1,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap');

    .box-share {

        position: relative;
        width: 100% !important;

    }

    a {
        color: #000000;
    }

    .share {
        /* position: absolute; */
        width: 200px;
        right: -10%;
        margin: auto;
        border-radius: 80px;
        transform: scale(.6);

    }
    .share span {
        color: #000;
        width: 100px;
        font-size: 20px;
        line-height: 20px;
        display: inline-block;
        font-weight: 900;
        text-transform: uppercase;
        position: absolute;
        left: 65%;    
        opacity: 1;
        z-index: 99;
        transform: translate(-100px, 20px);
        transition: opacity 0.3s ease-in-out;
        pointer-events: none;
    }
    .share nav {
        font-size: 0;
    }
    .share a {
        position: relative;
        line-height: 80px;
        width: 80px;
        text-align: center;
        display: inline-block;
        background-color: #ffffff;
        color: #ffffff;
        overflow: hidden;
        opacity: 1;
        transition: all 0.3s ease-in-out;
        margin: 0 -20px;
        box-shadow: 3px 1px 3px rgba(0, 0, 0, 0.1);
    }

    .share a svg {
        width: 50%;
        height: 50%;
        transform: translateY(10px);
        color: transparent;
    }
    .share a svg:hover {
        transition: all .4s ease-in;
        color: #fff;
    }

    .share a:nth-child(1) {
        border-top-left-radius: 40px;
        border-bottom-left-radius: 40px;
        margin-left: 0;
    }
    .share a:nth-child(1):hover {

        color:#fff;
        background: #833ab4;
        background: linear-gradient(
            to right,
            #833ab4,#fd1d1d,#fcb045
    );
    }
    .share a:nth-child(2) {
        border-top-right-radius: 40px;
        border-bottom-right-radius: 40px;
        margin-right: 0;
    }
        .share a:nth-child(2):hover {
        color:#fff;
        background: #000;
    }
    .share:hover span, .share.hover span {
        opacity: 0;
    }
    .share:hover a, .share.hover a {
        border-radius: 50%;
        margin: 0 10px;
        color: #000000;
        font-size: 28px;
    }
    .share:hover a:hover, .share.hover a:hover {
        color: #fff;
    }

</style>

<script>
    const share:any = document.querySelector('.share');

    setTimeout(() => {
    share.classList.add("hover");
    }, 1000);

    setTimeout(() => {
    share.classList.remove("hover");
    }, 3000);
</script>
