<button class="btn-go"><span><slot /></span><i></i></button>

<style>
    .btn-go {
  font-family: "Neo-latina" ,sans-serif;
  position: relative;
  background: #444;
  width: 45px;
  color: #fff;
  font-weight: 600;
  text-decoration: none;
  text-transform: uppercase;
  border: none;
  height: 45px;
  font-size: .8rem;
  transition: 0.2s;
  border-radius: 10px;
}

.btn-go:hover {

  background: #0FF0FC;
  color: #0FF0FC;
  box-shadow: 0 0 35px #0FF0FC;
  animation: box 3s infinite;
  cursor: pointer;
}

.btn-go::before {
  content: "";
  position: absolute;
  inset: 2px;
  background: #272822;
  border-radius: 10px;
}

.btn-go span {
  position: relative;
  z-index: 1;
}
.btn-go i {
  position: absolute;
  inset: 0;
  display: block;
}

.btn-go i::before {
  content: "";
  position: absolute;
  width: 10px;
  height: 2px;
  left: 54%;
  top: -2px;
  border: 2px solid #0FF0FC;
  background: #272822;
  transition: 0.2s;
}

.btn-go:hover i::before {
  width: 15px;
  left: 17%;
  animation: move 3s infinite;
}

.btn-go i::after {
  content: "";
  position: absolute;
  width: 10px;
  height: 2px;
  left: 15%;
  bottom: -2px;
  border: 2px solid #0FF0FC;
  background: #272822;
  transition: 0.2s;
}

.btn-go:hover i::after {
  width: 15px;
  left: 30%;
  animation: move 3s infinite;
}

@keyframes move {
  0% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(5px);
  }
  100% {
    transform: translateX(0);
  }
}

@keyframes box {
  0% {
    box-shadow: #27272c;
  }
  50% {
    box-shadow: 0 0 25px #0FF0FC;
  }
  100% {
    box-shadow: #27272c;
  }
}
</style>