    transform: translateX(35px);
    border-radius: 50%;
  }
  .socials li svg:hover {
    cursor: pointer;
    background-color: rgb(33, 21, 209);
    transition: all .4s ease-in !important;

  }

  .box-logo img {
    width: 200px;
    height: 100px;
    object-fit: contain;
    transform: translateY(50px);
