  footer {

    font-family: "Fira Sans", sans-serif;
    position: relative;
    width: 100%;
    height: 370px;
    margin-top: 50px;
    background-color: #000000;
    
  }
  .box-waves {

      height: 25%;
      background-color: transparent;
  }
  .wave {
  
    position: absolute;
    bottom: 0;
    top: 0;
    width: 100%;
    height: 150px;
    background-image: url("../assets/footer/wave.png");
    background-size: 1000px 100%;
  }
  .wave.wave1 {
    animation: animate 30s linear infinite;
    z-index: 4;
    opacity: .8;
    animation-delay: 0s;
    bottom: 0;
  }
  .wave.wave2 {
    animation: animate2 15s linear infinite;
    z-index: 3;
    opacity: .5;
    animation-delay: -5s;
    bottom: 5px;
  }
  .wave.wave3 {
    animation: animate2 15s linear infinite;
    z-index: 2;
    opacity: .7;
    animation-delay: -10s;
    bottom: 10px;
  }
    .wave.wave4 {
    animation: animate2 30s linear infinite;
    z-index: 1;
    opacity: .2;
    animation-delay: 2s;
    bottom: 15px;
  }

  section {
    transform: translateY(35px);
    background-color: #fff;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }


  .group-links {
    width: 100%;
    display: flex;
    flex-wrap: nowrap;
    justify-content:space-evenly;
    transform: translateY(25px);
  }

  .links,
  .links-2 {
    list-style: none;
  }



  ul li a,
  ul li {
    text-decoration: none;
    font-weight: 600;
    line-height: 2;
  }

  ul li a:visited {
    color:#000000
  }

  ul li a svg {
    transform: translateY(7px);
  }

  .links li a {
    color: #000000;
    border-radius: 15px;
    padding: 3px;
    border: 2px solid transparent;

  }

    .links li a:hover {
    color: blue;
    border: 2px solid blue;
    transition: all .4s ease-in;

  }


  .box-logo {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .box-logo img {
    width: 150px;
    height: 75px;
    object-fit: contain;
    transform: translateY(30px);
  }

  .group-text {
    font-size: medium;
    width: 100%;
    display: flex;
    justify-content: flex-end;
  }

  .legal {
    margin-right: 23px;

  }


  @keyframes animate {
    0% {
      background-position-x: 0;
    }
    100% {
      background-position-x: 1000px;
    }

  } 
    @keyframes animate2 {
    0% {
      background-position-x: 0;
    }
    100% {
      background-position-x: -1000px;
    }

  }
  @media (min-width:300px) AND (max-width:360px) {

    section {

      height: 140%;

    }
