<footer>
    <div class="box-waves">
      <div class="wave wave1"></div>
      <div class="wave wave2"></div>
      <div class="wave wave3"></div>
      <div class="wave wave4"></div>
    </div>

</footer>


<style>

  footer {
    position: relative;
    width: 100%;
    height: 80%;
    background-color: #000;
  }
  .box-waves {

      height: 25%;
  }
  .wave {
  
    position: absolute;
    bottom: 0;
    top: 0;
    width: 100%;
    height: 150px;
    background-image: url("../assets/footer/wave.png");
    background-size: 1000px 100%;
  }
  .wave.wave1 {
    animation: animate 30s linear infinite;
    z-index: 4;
    opacity: .8;
    animation-delay: 0s;
    bottom: 0;
  }
  .wave.wave2 {
    animation: animate2 15s linear infinite;
    z-index: 3;
    opacity: .5;
    animation-delay: -5s;
    bottom: 5px;
  }
  .wave.wave3 {
    animation: animate2 15s linear infinite;
    z-index: 2;
    opacity: .7;
    animation-delay: -10s;
    bottom: 10px;
  }
    .wave.wave4 {
    animation: animate2 30s linear infinite;
    z-index: 1;
    opacity: .2;
    animation-delay: 2s;
    bottom: 15px;
  }

  @keyframes animate {
    0% {
      background-position-x: 0;
    }
    100% {
      background-position-x: 1000px;
    }

  } 
    @keyframes animate2 {
    0% {
      background-position-x: 0;
    }
    100% {
      background-position-x: -1000px;
    }

  }


</style>