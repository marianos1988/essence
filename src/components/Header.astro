---
import BorderEffectLogo from "./BorderEffectLogo.astro";
import Navbar from "./Navbar.astro";


---


<header>
    <a href="/">
        <div class="box-logo">
            <img src="header/logoAnimado.gif" alt="Logo">
        </div>
    </a>
    <div>
        <BorderEffectLogo>
            <h1>Somos una combinación de música, arte y energía.</h1>
        </BorderEffectLogo>

    </div>
    <Navbar></Navbar>
</header>


<style>

    /* Roboto Mono */
    @import url('https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Noto+Serif:ital,wght@0,100..900;1,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap');


    header {
        position: relative;;
        width: 100%;
        height: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: radial-gradient(circle,rgba(0, 0, 0, 1) 0%, rgb(0, 0, 0) 80%, rgba(176, 175, 165, 1) 100%);
        background-size: 100%;
        border-bottom: solid 5px #bebebe;

    }
    
    


    @media (min-width:769px) {

        .box-logo {
            border-radius: 15px;
            width: 350px;
            height: 250px;
        }

        .box-logo img {
            border-radius: 20px;
            width: 100%; 
            transform: translatey(45px);

        }

        .box-logo img:hover {

            box-shadow:  5px 5px 20px #bebebe,
            -5px -5px 20px #ffffff;
            transition: all .4s ease-in;
        }
        
        h1 {
            color: #ffffff;

            font-family: "Fira Sans", sans-serif;
            width: 100%;
            text-shadow: -7px -1px 6px rgba(255, 255, 255, 0.6);
        }
    }

    @media (max-width:768px) {

        header {
            width: 100%;
            height: 400px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background: #000000;
            background: radial-gradient(circle,rgba(0, 0, 0, 1) 84%, rgba(176, 175, 165, 1) 100%);


        }

        .box-logo {
            
            width: 100%;
            height: 250px;
        }

        .box-logo img {

            width: 100%; 
            margin-top: 25px;
            transform: translatey(20%);

        }
        h1 {
            color: #ffffff;
            transform: translateY(-10%);
            font-size: larger;
            text-align: center;
            font-family: "Fira Sans", sans-serif;
            width: 100%;
            text-shadow: -7px -1px 6px rgba(255, 255, 255, 0.6);
        }


    }
    
    @media (min-width:400px) AND (max-width:769px) {
        .box-logo {
            max-width: 420px;
        } 
    }

</style>