---

import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import EventsR from "../components/events/EventsR";
import Footer from "../components/Footer.astro";
import BtnWhatsapp from "../components/BtnWhatsapp.astro";

//ESta pagina se tiene que prerenderizar
export const prerender = true;

const events = await getCollection("events");
// ordenar alfabÃ©ticamente por slug
const sortedBySlug = events.sort((a, b) => a.slug.localeCompare(b.slug));


---
 
<Layout>
    <BtnWhatsapp />
    <EventsR 
        client:load
        events={sortedBySlug}
    ></EventsR>
    <Footer 
        page="events"
    />
</Layout>






