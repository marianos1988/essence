---

import Footer from "../components/Footer.astro";
import BackgroundEffects3 from "../components/rooster/BackgroundEffects3.astro";
import TresdeCard from "../components/rooster/TresdeCard.astro";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";



const rooster = await getCollection("rooster");








---


<Layout>
    <main class="container-rooster"></main>
        <BackgroundEffects3>


            <h1>Rooster</h1>

            <div class="box-cards">
            
            {
                rooster.map(
                    (rooster) => (
                        <TresdeCard
                            img1={rooster.data.img1}
                            img2={rooster.data.img2}
                            logo={rooster.data.logo}
                        />
                    )
                )
            }
        </div>  
    
        </BackgroundEffects3>
    </main>
    <!-- <Footer 
        page="rooster"
    />  -->

</Layout>


<style>
    @import url('https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Libre+Baskerville:ital,wght@0,400;0,700;1,400&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Noto+Serif:ital,wght@0,100..900;1,100..900&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap'); 

    .container-rooster {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    h1 {
        font-family: "Fira Sans", sans-serif;
        color: #fff;
        text-align: center;
        font-size: 40px;
    }

    .box-cards {

        margin-top: 150px;
        max-width: 1200px;
        display: flex;
        flex-wrap: wrap;
        gap: 25px;
        justify-content: center;
        align-items: center;
    }
</style>