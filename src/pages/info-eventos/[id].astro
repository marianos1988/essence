        width: 300px;
        height: 380px;
        object-fit: fill;
        border-radius: 15px;
        border: 2px solid rgba(255, 255, 255, 0.1);
        margin: 15px;

    }
    .info {
     
        width: 90%;
        padding: 10px;
        
    }

    .info h1 {
        display: flex;
        flex-wrap: nowrap;
        justify-content: center;
        text-align: center;
        font-size: 40px;
        text-decoration: underline;
    }

    .box-place-date {
        display: flex;
        justify-content: space-between;
        color: #fff;
        font-size: larger;
    }

    .box-description {
        color: #fff;

        text-align: justify;
    }


    .box-btn-buy {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
