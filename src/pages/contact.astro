---
import BackgroundEffects6 from "../components/contact/BackgroundEffects6.astro";
import BtnSocialMedia from "../components/contact/BtnSocialMedia.astro";
import Layout from "../layouts/Layout.astro";

---

<Layout>
	<BackgroundEffects6>
		<section class="contact">
			<div class="content">
				<h2>Contacto</h2>
				<p>Contactate con nosotros para la organizacion de eventos de fiesta electr√≥nica, y rosters</p>
			</div>
			<div class="container">
				<div class="contactInfo">
					<div class="box">
						<div class="icon">
							<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"><path stroke="none" d="M0 0h24v24H0z" fill="none"/>
								<path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
								<path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
							</svg>
						</div>
						<div class="text">
							<h3>Whatsapp</h3>
							<p>+5491112341234</p>
						</div>
					</div>
					<div class="box">
						<div class="icon">
							<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-phone">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
								<path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2" />
							</svg>
						</div>
						<div class="text">
							<h3>Telefono</h3>
							<p>+541112341234</p>
						</div>
					</div>
					<div class="box">
						<div class="icon">
							<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-mail">
								<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
								<path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" />
							</svg>
						</div>
						<div class="text">
							<h3>Email</h3>
							<p>essence@gmail.com</p>
						</div>
					</div>
					<h2 class="txt">Redes Sociales</h2>
					<div class="sci">
						<BtnSocialMedia />
					</div>
				</div>

				<div class="contactForm">
					<form>
						<h2>Envianos tu mensaje</h2>
						<div class="inputBox">
							<input type="text" name="" required="required">
							<span>Nombre</span>
						</div>
						<div class="inputBox">
							<input type="text" name="" required="required">
							<span>Correo</span>
						</div>
						<div class="inputBox">
							<input type="text" name="" required="required">
							<span>Telefono</span>
						</div>
						<div class="inputBox">
							<textarea required="required"></textarea>
							<span>Escribe su Mansaje</span>
						</div>
						<div class="inputBox">
							<input type="submit" value="Send">
						</div>
					</form>
				</div>
			</div>
		</section>
	</BackgroundEffects6>

</Layout>


<style>


.contact 
{
	z-index: 26;
	margin: 20px;
	position: relative;
	min-height: 100vh;
	padding: 50px 100px;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	background: transparent;
	border: 4px solid #0FF0FC;
	border-radius: 15px;
}
.contact .content 
{
	max-width: 800px;
	text-align: center;

}
.contact .content h2 
{
	font-family: "Neo-latina" ,sans-serif;
	font-size: 3em;
	color: #fff;
	font-weight: 500;
	height: 35px;
}
.contact .content p 
{
	font-family: "Cocogoose" ,sans-serif;
	color: #fff;
	font-size: 1.1em;
	font-weight: 300;
}
.container 
{
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 50px;
	margin-top: 30px;
}
.container .contactInfo 
{
	width: 50%;
	display: flex;
	flex-direction: column;

}
.container .contactInfo .box 
{
	position: relative;
	width: 300px;
	padding: 20px 0;
	display: flex;
	cursor: pointer;

}


.container .contactInfo .box .icon svg {
	transform: translateY(20px);
	min-width: 60px;
	color: #0FF0FC;
	height: 60px;
	background: #616060;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 1.75em;
	transition: 0.5s;
	border-radius: 15px;
	border: 2px solid;
}



.container .contactInfo .box:hover .icon svg
{
	background: #0FF0FC;
	color: #fff;
	border: 2px solid #fff;
}
.container .contactInfo .box .text 
{
	display: flex;
	flex-direction: column;
	margin-left: 20px;
	font-size: 1.1em;
	color: #fff;
	font-weight: 300;

}
.container .contactInfo .box .text h3 
{
	font-family: "Neo-latina" ,sans-serif;
	font-size: 1.6em;
	font-weight: 500;
	color: #0FF0FC;
	line-height: 0px;
}

.container .contactInfo .box .text p
{
	font-family: sans-serif;
	font-size: 1.2;
	font-weight: 600;
	line-height: 0px;
} 
.container .contactInfo .txt
{
	font-family: "Neo-latina" ,sans-serif;
	color: #fff;
	margin-top: 50px;
	font-weight: 500;
	padding-left: 10px;
	border-left: 50px solid #0FF0FC;
	line-height: 1em;

}
.sci 
{
margin-bottom: 10%;
position: relative;


}


.container .contactForm
{
	position: relative;
	width: 40%;
	background: #fff;
	min-height: 100px;
	padding: 60px;
} 
.container .contactForm h2 
{
	font-size: 2em;
	color: #333;
	font-weight: 500;
}
.container .contactForm .inputBox 
{
	position: relative;
	width: 100%;
	margin-top: 20px;
}
.container .contactForm .inputBox input, 
.container .contactForm .inputBox textarea 
{
	width: 100%;
	padding: 5px 0;
	font-size: 1.1em;
	margin: 10px 0;
	border: none;
	border-bottom: 2px solid #333;
	outline: none;
	resize: none;
}
.container .contactForm .inputBox span 
{
	position: absolute;
	left: 0;
	pointer-events: none;
	padding: 5px 0;
	margin: 10px 0;
	font-size: 1.1em;
	color: #666;
	transition: 0.5s;
}
.container .contactForm .inputBox input:focus ~ span, 
.container .contactForm .inputBox textarea:focus ~ span,
.container .contactForm .inputBox input:valid ~ span, 
.container .contactForm .inputBox textarea:valid ~ span 
{
	color: #e91e63;
	font-size: 0.9em;
	transform: translateY(-20px);
}
.container .contactForm .inputBox input[type="submit"]
{
	width: 100px;
	background: #0FF0FC;
	color: #fff;
	border: none;
	cursor: pointer;
	padding: 10px;
	font-size: 1.1em;
	font-weight: 500;
}

/* lets make it responsive */
@media (max-width: 991px)
{
	.contact
	{
		padding: 50px;
	}
	.container
	{
		flex-direction: column;
	}
	.container .contactInfo,
	.container .contactForm
	{
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.container .contactForm
	{
		padding: 50px 30px;
	}
	.sci 
	{
		width:100%;
		position: relative;


	}
}
    </style>