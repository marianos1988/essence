---
import BackgroundEffects6 from "../components/contact/BackgroundEffects6.astro";
import Form from "../components/contact/Form";
import Layout from "../layouts/Layout.astro";




---

<Layout>
	<BackgroundEffects6>
		<section class="contact">
			<div class="content">
				<h2>Contacto</h2>
				<p>Contactate con nosotros para la organizacion de eventos y contratación de artistas.</p>
			</div>
			<div class="container">
				<div class="contactInfo">
					<h2 class="txt">Contacto</h2>
					<div class="box">
						<a href="https://wa.me/5491112345678" target="_blank" rel="noopener"><div class="icon">
							<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"><path stroke="none" d="M0 0h24v24H0z" fill="none"/>
								<path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
								<path d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1" />
							</svg>
						</div></a>
						<div class="text">
							<h3>Whatsapp</h3>
						</div>
					</div>
					<div class="box">
						<div class="icon">
							<a href="mailto:essencecrew.bookings@gmail.com">
								<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-mail">
									<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
									<path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" />
								</svg>
							</a>
						</div>
						<div class="text">
							<h3>Email</h3>
						</div>
					</div>
					<h2 class="txt">Redes Sociales</h2>
					<div class="sci">
						<div class="box">
							<div class="icon">
								<a href="https://www.instagram.com/essencee.crew/" target="_blank">
									<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-instagram"><path stroke="none" d="M0 0h24v24H0z" fill="none"/>
										<path d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" /><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" />
										<path d="M16.5 7.5v.01" />
									</svg>
								</a>
							</div>         
							<div class="text">
								<h3>Instagram</h3>
							</div>
						</div>
						<div class="box">
							<div class="icon">
								<a href="https://www.tiktok.com/@essencee.crew?_t=ZM-8wDfiHTtKLd&_r=1" target="_blank">
									<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-brand-tiktok">
										<path stroke="none" d="M0 0h24v24H0z" fill="none"/>
										<path d="M21 7.917v4.034a9.948 9.948 0 0 1 -5 -1.951v4.5a6.5 6.5 0 1 1 -8 -6.326v4.326a2.5 2.5 0 1 0 4 2v-11.5h4.083a6.005 6.005 0 0 0 4.917 4.917z" />
									</svg>
								</a>
							</div>         
							<div class="text">
								<h3>Tiktok</h3>
							</div>
						</div>
					</div>
				</div>
				
				<Form 
				    client:load
				/>
			</div>
		</section>
	</BackgroundEffects6>

</Layout>


<style>


.contact 
{
	z-index: 26;
	margin: 20px;
	position: relative;
	min-height: 100vh;
	padding: 50px 100px;
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	background: transparent;
	border: 4px solid #0FF0FC;
	border-radius: 15px;
}
.contact .content 
{
	max-width: 800px;
	text-align: center;

}
.contact .content h2 
{
	font-family: "Neo-latina" ,sans-serif;
	font-size: 3em;
	color: #fff;
	font-weight: 500;
	height: 35px;

}
.contact .content p 
{
	font-family: "Cocogoose" ,sans-serif;
	color: #fff;
	font-size: 1.1em;
	font-weight: 300;
	margin-top: 30px
}
.container 
{
	width: 100%;
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 50px;
	margin-top: 30px;
}
.container .contactInfo 
{
	width: 50%;
	display: flex;
	flex-direction: column;

}
.container .contactInfo .box 
{
	position: relative;
	width: 300px;
	padding: 20px 0;
	display: flex;


}

.container .contactInfo .box .icon {

}

.container .contactInfo .box .icon svg {
	transform: translateY(20px);
	min-width: 50px;
	color: #0FF0FC;
	height: 50px;
	background: #616060;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 1.75em;
	transition: 0.5s;
	border-radius: 15px;
	border: 2px solid;
	
}



.container .contactInfo .box .icon svg:hover
{
	background: #0FF0FC;
	color: #fff;
	border: 2px solid #fff;
	cursor: pointer;
}
.container .contactInfo .box .text 
{
	display: flex;
	flex-direction: column;
	margin-left: 20px;
	font-size: 1.1em;
	color: #fff;
	font-weight: 300;

}

.container .contactInfo .box .text h3 
{
	font-family: "Neo-latina" ,sans-serif;
	font-size: 1.6em;
	font-weight: 500;
	color: #0FF0FC;
	line-height: 0px;
	transform: translateY(20px);
}

.container .contactInfo .box .text p
{
	font-family: sans-serif;
	font-size: 1.2;
	font-weight: 600;
	line-height: 0px;
} 
.container .contactInfo .txt
{
	font-family: "Neo-latina" ,sans-serif;
	color: #fff;
	margin-top: 50px;
	font-weight: 500;
	padding-left: 10px;
	border-left: 50px solid #0FF0FC;
	line-height: 1em;

}
.sci 
{
margin-bottom: 10%;
position: relative;


}
@media (max-width:420px) {
	
	.contact {
	width:60%;
	}
.container .contactInfo 
{
	transform: scale(.8) translateX(-50%)

}


}

@media (max-width: 991px)
{
	.contact
	{
		padding: 50px;
	}
	.container
	{
		flex-direction: column;
	}
	.container .contactInfo {
		{
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		}
	}

	.sci 
	{
		width:100%;
		position: relative;


	}
}
    </style>