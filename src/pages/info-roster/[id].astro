---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import BackgroundEfects4 from "../../components/roster/BackgroundEffects4.astro"
import logo from "../../assets/events/logo.png";

import Aliaga2 from "../../assets/roster/aliaga2.jpg"
import AliagaLogo from "../../assets/roster/aliagalogo.png"

import NazaRv2 from "../../assets/roster/nazarv2.jpg"
import NazaRvLogo from "../../assets/roster/nazarvlogo.png"

import Huncho2 from "../../assets/roster/huncho2.jpg"
import HunchoLogo from "../../assets/roster/hunchologo.png"

import Rapetti2 from "../../assets/roster/rapetti2.jpg"
import RapettiLogo from "../../assets/roster/rapettilogo.png"

import Atmoz2 from "../../assets/roster/atmoz2.jpg"
import AtmozLogo from "../../assets/roster/atmozlogo.png"

import BtnReturn from '../../components/roster/BtnReturn.astro';

import BtnSocialMedia from '../../components/roster/BtnSocialMedia.astro';

export async function getStaticPaths() {

    const rosters = await getCollection("roster")

    return rosters.map(

        (roster) => ({
            params: { id: roster.slug },
            props: roster
        })
    )

}

const infoRoster = Astro.props

const { Content } = await render(Astro.props); // REnderiza el contenido de los archivos Markdown
const { data } = infoRoster;





let imagen:any;
let logoDj: any;
let socialMedia:any;

switch(infoRoster.slug) {

    case "roster-1": 
        imagen = Aliaga2;
        logoDj = AliagaLogo;
        socialMedia = {
            instagram: data.instagram,
            youtube: null,
            spotify: null,
            soundcloud: data.soundcloud,
            tiktok: data.tiktok
        }
        break;

    case "roster-2": 
        imagen = NazaRv2; 
        logoDj = NazaRvLogo;
        socialMedia = {
            instagram: data.instagram,
            youtube: data.youtube,
            spotify: data.spotify,
            soundcloud: data.soundcloud,
            tiktok: data.tiktok
        }
        break;

    case "roster-3": 
        imagen = Rapetti2; 
        logoDj = RapettiLogo;
        socialMedia = {
            instagram: data.instagram,
            youtube: data.youtube,
            spotify: null,
            soundcloud: null,
            tiktok: data.tiktok
        }
        break;

    case "roster-4": 
        imagen = Huncho2;
        logoDj = HunchoLogo;
        socialMedia = {
            instagram: data.instagram,
            spotify: data.spotify,
            tiktok: data.tiktok,
            soundcloud: null,
            youtube: null
        }
        break;

    case "roster-5": 
        imagen = Atmoz2; 
        logoDj = AtmozLogo;
        socialMedia = {
            instagram: data.instagram,
            youtube: data.youtube,
            spotify: data.instagram,
            soundcloud: null,
            tiktok: null
        }
        break;



}
---

<Layout>
    <BackgroundEfects4>
        <div class="container-info-roster">
            <BtnReturn></BtnReturn>
            <div class="box-logo">
                <img class="logo" src={logo.src} alt="Logo">
            </div>
            <div class="box-info">
                <div class="img-flyer">
                    <img 
                        src={imagen.src} alt={infoRoster.slug}
                        transition:name= {`img2-${infoRoster.slug}`} 
                    >
                </div>
                <div class="info">
                    <div class="box-logo-dj">
                        <img class={`logo-dj ${data.logo}`}
                            src={logoDj.src}
                            transition:name= {`logo-${infoRoster.slug}`}
                        >
                    </div>

                    <dir class="box-profesion">
                        <h5>Profesion: {data.profesion}</h5>
                        <h5>Genero: {data.genero}</h5>
                    </dir>
                    <div class="box-description">
                        <Content></Content>
                    </div>
                    <div class="box-social-media">
                        <div class="group-btns">
                            {
                                socialMedia.instagram != null && (
                                <BtnSocialMedia
                                    socialMedia="instagram"
                                    link={socialMedia.instagram}
                                />
                               )
                            }
                            {
                                socialMedia.spotify != null && (
                                    <BtnSocialMedia
                                        socialMedia="youtube"
                                        link={socialMedia.youtube}
                                    />
                                )
                            }
                            {
                                socialMedia.youtube != null && (
                                    <BtnSocialMedia
                                        socialMedia="spotify"
                                        link={socialMedia.spotify}
                                    />
                                )
                            }
                            {
                                socialMedia.soundcloud != null && (
                                    <BtnSocialMedia
                                        socialMedia="soundcloud"
                                        link={socialMedia.soundcloud}
                                    />
                                )
                            }
                            {
                                socialMedia.tiktok != null && (
                                    <BtnSocialMedia
                                        socialMedia="tiktok"
                                        link={socialMedia.tiktok}
                                    />
                                )
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </BackgroundEfects4>
</Layout>


<style>
    
