        margin-top: 10px;
        height: 30%;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 150px;
    }

    .logo {
        max-width: 60%;
    }

    .box-info {
        background: transparent;
        width: 95%;
        display: grid;
        grid-template-columns: 1fr 2fr;
        height: 100%
        border: 4px solid #0FF0FC;
        border-radius: 15px;
        
    }

    .box-logo-dj {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }


    .logo-dj {
        height: 150px;

    }

    .aliagalogo {

        width: 450px;

    }

    .img-flyer {

        margin: auto 0 auto 15px;
        width: 45%;

    }
    .img-flyer img {
        
        width: 300px;
        height: 380px;
        object-fit: fill;
        border-radius: 15px;
        border: 2px solid rgba(255, 255, 255, 0.1);
        margin: 15px;

    }
    .info {
     
        width: 90%;
        padding: 10px;
        
    }


    .box-profesion {
        display: flex;
        justify-content: space-between;
        color: #fff;
        font-size: larger;
    }

    .box-profesion h5 {
        font-family: "Neo-latina" ,sans-serif;
