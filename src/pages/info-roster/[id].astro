---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import BackgroundEfects4 from "../../components/roster/BackgroundEffects4.astro"
import logo from "../../assets/events/logo.png";

import Aliaga2 from "../../assets/roster/aliaga2.jpg"
import AliagaLogo from "../../assets/roster/aliagalogo.png"

import NazaRv2 from "../../assets/roster/nazarv2.jpg"
import NazaRvLogo from "../../assets/roster/nazarvlogo.png"

import Huncho2 from "../../assets/roster/huncho2.jpg"
import HunchoLogo from "../../assets/roster/hunchologo.png"

import Rapetti2 from "../../assets/roster/rapetti2.jpg"
import RapettiLogo from "../../assets/roster/rapettilogo.png"

import Atmoz2 from "../../assets/roster/atmoz2.jpg"
import AtmozLogo from "../../assets/roster/atmozlogo.png"

import BtnReturn from '../../components/roster/BtnReturn.astro';

export async function getStaticPaths() {

    const rosters = await getCollection("roster")

    return rosters.map(

        (roster) => ({
            params: { id: roster.slug },
            props: roster
        })
    )

}

const infoRoster = Astro.props
const { data } = infoRoster;

let imagen:any;
let logoDj: any;

switch(infoRoster.slug) {

    case "roster-1": 
        imagen = Aliaga2;
        logoDj = AliagaLogo;
        break;

    case "roster-2": 
        imagen = NazaRv2; 
        logoDj = NazaRvLogo;
        break;

    case "roster-3": 
        imagen = Rapetti2; 
        logoDj = RapettiLogo;
        break;

    case "roster-4": 
        imagen = Huncho2;
        logoDj = HunchoLogo
        break;

    case "roster-5": 
        imagen = Atmoz2; 
        logoDj = AtmozLogo;
        break;



}
---

<Layout>
    <BackgroundEfects4>
        <div class="container-info-rooster">
            <BtnReturn></BtnReturn>
            <div class="box-logo">
                <img class="logo" src={logo.src} alt="Logo">
            </div>
            <div class="box-info">
                <div class="img-flyer">
                    <img 
                        src={imagen.src} alt={infoRoster.slug}
                        transition:name= {`img2-${infoRoster.slug}`} 
                    >
                </div>
                <div class="info">
                    <div class="box-logo-dj">
                        <img class="logo-dj"
                            src={logoDj.src}
                            transition:name= {`logo-${infoRoster.slug}`}
                        >
                    </div>

                    <!-- <dir class="box-place-date">
                        <h5>Lugar: {data.lugar}</h5>
                        <h5>Fecha: {data.fecha}</h5>
                    </dir> -->
                    <div class="box-description">
                        <p>
                            {infoRoster.body}
                        </p>
                    </div>
                    <div class="box-btn-buy">
                        <!-- <a href={data.link_comprar} target="_blank"><BtnBuy>Comprar Ticket</BtnBuy></a> -->
                    </div>

                </div>
            </div>
        </div>
    </BackgroundEfects4>
</Layout>


<style>

    .box-logo {
        margin-top: 10px;
        height: 30%;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 150px;
    }

    .logo {
        max-width: 60%;
    }
    .box-info {
        background: transparent;
        display: grid;
        grid-template-columns: 1fr 2fr;
        height: 100%
        padding: 20px;
        margin: 20px;
        border: 4px solid #0FF0FC;
        border-radius: 15px;
        
    }
    .box-logo-dj {
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .logo-dj {
        display: block;
        max-width: 60%;
        text-align: center;
    }
    .img-flyer {


        width: 45%;

    }
    .img-flyer img {
        
        width: 300px;
        height: 380px;
        object-fit: fill;
        border-radius: 15px;
        border: 2px solid rgba(255, 255, 255, 0.1);
        margin: 15px;

    }
    .info {
     
        width: 90%;
        padding: 10px;
        
    }

    .info h1 {
        display: flex;
        flex-wrap: nowrap;
        justify-content: center;
        text-align: center;
        font-size: 40px;
        text-decoration: underline;
    }

    .box-place-date {
        display: flex;
        justify-content: space-between;
        color: #fff;
        font-size: larger;
    }

    .box-description {
        color: #fff;

        text-align: justify;
    }


    .box-btn-buy {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
@media (min-width:300px) AND (max-width: 350px) {

    .box-info {
        padding: 0px;
        margin: 0px;
    }
    .img-flyer img {
        width: 220px;
        padding: 0;
    }
}

@media (min-width:351px) AND (max-width: 400px) {

    .box-info {
        padding: 0px;
        margin: 0px;
    }
    .img-flyer img {
        width: 260px;
        padding: 0;
    }
}

    @media (max-width: 750px) {

        .box-info {
            background: transparent;
            display: grid;
            grid-template-columns: 1fr;
            height: 100%
            padding: 20px;
            margin: 20px;
            border: 4px solid #0FF0FC;
            border-radius: 15px;
        }

        .img-flyer {
            display: flex;
            width: 100%;
            justify-content: center;
            align-items: center;
        }

            .box-btn-buy {
            margin: 20px 0 20px 0;

        }

        .box-description {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .info {
            margin-left: 10px;
        }

    }

    @media (min-width:1020px) {
        
        .box-btn-buy {
            margin-top: 45px;
        }

    }

    



</style>